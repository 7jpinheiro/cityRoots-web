                  <% @photo_event.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="actions">
            <%= f.label :photo %><br/>
            <%= f.file_field :photo, multiple: true, name: 'photo_event[photo]',:class=>"filestyle" %>
            <%= f.hidden_field :event_id,  :value => @event.id %>
          </div>
          <script>
              $(":file").filestyle({input: false,classButton: "btn btn-primary",buttonText: "Adicione uma Foto"});
          </script>
      <% end %>
      <% # jquery upload template # %>
      <script id="template-upload" type="text/x-tmpl">
            <div class="upload">
            {%=o.name%}
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 0%">
                     <span class="sr-only"></span>
                    </div>
                </div>
            </div>
        </script>
      <br/>
      <br/>
      <div id="map-canvas" style="width: 100%; height: 400px"></div>
    </div>
  </div>
