           if @tipos.length!=0
        %>
              <dt>Tipo</dt>
              <dd>
              <%
                 @tipos.each do |tipo|
                   @type=Type.where("id=?",tipo.type_id)
              %>
                  <%= @type.first.name %><br/>
            <%
               end
            %>
              </dd>
            <%

            end
        if trans.description != nil
        %>
        <dt>Descrição</dt>
