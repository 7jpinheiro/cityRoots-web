        <%
           end
           if trans.schedule != nil
        %>
            <dt>Horário</dt>
            <dd><%= trans.schedule %></dd>
        <%
           end
           if @event.site != nil
        %>
            <dt>Site</dt>
            <dd><%= @event.site %></dd>
        <%
           end
           if @event.email != nil
        %>
            <dt>Email</dt>
            <dd><%= @event.email %></dd>
        <%
           end
           if @event.phone != nil
        %>
            <dt>Telemovel</dt>
            <dd><%= @event.phone %></dd>
        <%
           end
           if trans.transport != nil
        %>
