              <%= @event.startdate %>
              <%
                 if @event.enddate != nil%>
                  até <%= @event.enddate %>
              <%  end
              %>
            </dd>
        <%
           end
           if trans.price != nil
        %>
            <dt>Preço</dt>
            <dd><%= trans.price %></dd>
        <%
           end
           if @event.organization != nil
        %>
            <dt>Organização</dt>
            <dd><%= @event.organization %></dd>
        <%
           end
           if trans.program != nil
        %>
            <dt>Programação</dt>
            <dd><%= trans.program %></dd>
        <%
           end
           if @event.source != nil
        %>
