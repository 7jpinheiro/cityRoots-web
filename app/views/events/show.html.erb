      <span style="border-top: none;"><%= link_to 'Voltar', events_path ,:class=>"btn btn-default btn-square"%></span>
    </div>
    <div class="col-sm-6">
      <ul class="thumbnails"></ul>
      <%= form_for @photo_event=PhotoEvent.new, :url => photo_events_path, html: { multipart: true } do |f| %>
          <% if @photo_event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@photo_event.errors.count, "error") %> Prohibited this upload from being saved:</h2>

