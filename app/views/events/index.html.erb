<h1>Lista dos seus eventos Eventos</h1>
<%= csrf_meta_tags %>
<br>
<%= link_to 'Novo Evento', new_event_path, :class=>"btn btn-primary btn-square" %>
<br>
<%
    @events=Event.where("web_user_id=?",current_user.id);
    @events.each do |event|

        trans=EventTranslation.where("event_id=?",event.id).first
%>
<br/>
<div class="col-md-12">
  <div class="well well-sm">
    <div class="row">
      <div class="col-xs-3 col-md-3 text-center">

        <%= image_tag "Index/douro.jpg" , :style =>"max-height:180px; max-width:200px" %>
      </div>
      <div class="col-xs-9 col-md-9 section-box">
        <div class="row">
          <div class="col-md-8">
           <h4><strong><%= link_to trans.name, event %></strong></h4>
          </div>
          <div  class="col-md-4 text-right" style="min-height:30px">
            <%= link_to edit_event_path(event) do %>
            <span class="fa fa-edit"> </span>Editar
            <% end %>
            <%= link_to event, method: :delete, data: { confirm: 'Are you sure?'}  do %>
             <span class="fa fa-trash-o"></span>Remover
            <% end %>
          </div>
        </div>
        <div >
          <p>
            <b>Pre√ßo:</b><%= event.price %><br/>
          </p>
          <p>
              <b>Categoria:</b><br/>
              <b>Data inicio:</b><%= event.startdate %> <br/>
              <b>Data fecho:</b><%= event.enddate %> <br/>
            </p>
          <hr/>
          <div class="row rating-desc">
            <div class="col-md-12">
              <span class="fa fa-star"/><span class="fa fa-star"/><span class="fa fa-star"/><span class="fa fa-star-half-full"/><span class="fa fa-star-o"/>(36)<span class="separator">|</span>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<br/>
