<div class="page-header">
  <h1><%= @service.name %></h1>
</div>
<div class="col-md-12">
  <div class="well well-sm">
    <div class="row">
      <div class="col-md-6">
        <table class="table">
          <%
             if @service.address != nil
          %>
              <tr>
                <th style="border-top: none;">Morada</th>
                <td style="border-top: none;"><%= @service.address %></td>
              </tr>
          <%
             end
             if @service.schedule != nil
          %>
              <tr>
                <th style="border-top: none;">Horário</th>
                <td style="border-top: none;"><%= @service.schedule %></td>
              </tr>
          <%
             end
             if @service.site != nil
          %>
              <tr>
                <th style="border-top: none;">Site</th>
                <td style="border-top: none;"><%= @service.site %></td>
              </tr>
          <%
             end
             if @service.email != nil
          %>
              <tr>
                <th style="border-top: none;">Email</th>
                <td style="border-top: none;"><%= @service.email %></td>
              </tr>
          <%
             end
             if @service.transport != nil
          %>
              <tr>
                <th style="border-top: none;">Transporte</th>
                <td style="border-top: none;"><%= @service.transport %></td>
              </tr>
          <%
             end

             if @service.service_type_id != nil
               id=@service.service_type_id
               tipopoint=ServiceType.where(["id = ?", id ]).first
               tipo=tipopoint.name;
          %>
              <tr>
                <th style="border-top: none;">Tipo</th>
                <td style="border-top: none;"><%= tipo %></td>
              </tr>
          <%
             end
             if @service.description != nil
          %>
              <tr>
                <th style="border-top: none;">Descrição</th>
                <td style="border-top: none;text-align:justify;"><%= @service.description %></td>
              </tr>
          <%
             end
             if @service.capacity != nil
          %>
              <tr>
                <th style="border-top: none;">Lotação</th>
                <td style="border-top: none;text-align:justify;"><%= @service.capacity %></td>
              </tr>
          <%
             end
             if @service.details != nil
          %>
              <tr>
                <th style="border-top: none;">Informação Adicional</th>
                <td style="border-top: none;text-align:justify;"><%= @service.details %></td>
              </tr>
          <%
             end
          %>
        </table>
      </div>
      <div class="col-md-6">
        <div id="carousel-example-generic1" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="item active">
              <%= image_tag "Attractions/Bom_Jesus1.jpg" , { style: "text-align:center; vertical-align:middle; height:250px; width: 100%;" } %>
              <div class="carousel-caption"></div>
            </div>
            <div class="item">
              <%= image_tag "Attractions/Bom_Jesus2.jpg" , { style: "text-align:center; vertical-align:middle; height:250px; width: 100%;" } %>
              <div class="carousel-caption"></div>
            </div>
            <div class="item">
              <%= image_tag "Attractions/Bom_Jesus3.jpg" , { style: "text-align:center; vertical-align:middle; height:250px; width: 100%;" } %>
              <div class="carousel-caption"></div>
            </div>
            <div class="item">
              <%= image_tag "Attractions/Bom_Jesus4.jpg" , { style: "text-align:center; vertical-align:middle; height:250px; width: 100%;" } %>
              <div class="carousel-caption"></div>
            </div>
          </div>
          <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic1" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic1" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
          </a>
        </div>
        <br/>
        <hr/>
        <br/>
        <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=13&markers=#{@service.latitude}%2C#{@service.longitude}" %>
      </div>
    </div>
    <br>
    <table class="table">
      <tr class="col-md-3">
        <td style="border-top: none;"><%= link_to 'Voltar', services_path ,:class => "btn btn-default"%></td>
        <td style="border-top: none;"><%= link_to 'Editar', edit_service_path(@service),:class => "btn btn-primary" %></td>
      </tr>
    </table>
  </div>
</div>


