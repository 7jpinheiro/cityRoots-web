<%
   servi=ServiceTranslation.where("service_id=?",@service.id).first

%>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB_WbKcg0_KTnKKamashIIIG5xz46DY2N4&sensor=false"></script>
<script type="text/javascript">


    var stockholm = new google.maps.LatLng(<%= @service.latitude %>, <%= @service.longitude %>);
    var parliament = new google.maps.LatLng(<%= @service.latitude %>, <%= @service.longitude %>);
    var marker;
    var map;

    function initialize() {
        // Create an array of styles.
        var styles = [{"featureType":"water","stylers":[{"visibility":"on"},{"color":"#acbcc9"}]},{"featureType":"landscape","stylers":[{"color":"#f2e5d4"}]},{"featureType":"road.highway","elementType":"geometry","stylers":[{"color":"#c5c6c6"}]},{"featureType":"road.arterial","elementType":"geometry","stylers":[{"color":"#e4d7c6"}]},{"featureType":"road.local","elementType":"geometry","stylers":[{"color":"#fbfaf7"}]},{"featureType":"poi.park","elementType":"geometry","stylers":[{"color":"#c5dac6"}]},{"featureType":"administrative","stylers":[{"visibility":"on"},{"lightness":33}]},{"featureType":"road"},{"featureType":"poi.park","elementType":"labels","stylers":[{"visibility":"on"},{"lightness":20}]},{},{"featureType":"road","stylers":[{"lightness":20}]}];

        // Create a new StyledMapType object, passing it the array of styles,
        // as well as the name to be displayed on the map type control.
        var styledMap = new google.maps.StyledMapType(styles,
                {name: "Styled Map"});


        var mapOptions = {
            zoom: 11,
            center: stockholm
        };

        map = new google.maps.Map(document.getElementById('map-canvas'),
                mapOptions);

        var image="<%= image_url "maker.png"%>";

        marker = new google.maps.Marker({
            map:map,
            animation: google.maps.Animation.DROP,
            position: parliament,
            icon: image
        });
        google.maps.event.addListener(marker, 'click', toggleBounce);
        //Associate the styled map with the MapTypeId and set it to display.
        map.mapTypes.set('map_style', styledMap);
        map.setMapTypeId('map_style');
    }

    function toggleBounce() {

        if (marker.getAnimation() != null) {
            marker.setAnimation(null);
        } else {
            marker.setAnimation(google.maps.Animation.BOUNCE);
        }
    }

    google.maps.event.addDomListener(window, 'load', initialize);
</script>
<div class="well well-lg">
  <h1>
    <%= servi.name%>
    <%
    if @service.accessibility !=0
        %><small><i class="fa fa-wheelchair"></i></small><%
    end
    %>
  </h1>
  <br/>
  <%= link_to edit_service_path(@service) do
  %><i class="fa fa-edit"></i> Editar<%
   end
%>
  <hr/>
  <div class="row">
    <div class="col-md-6">
      <dl class="dl-horizontal">
        <%
           if @service.rating != 0
        %>
            <dt>Classificação</dt>
            <dd>
              val=event.rating
              <%
                 indice=0;
                 while val >0
              %><span class="fa fa-star"></span><%
               val=val-1
               indice=indice+1
               end
               while indice <5
            %><span class="fa fa-star-o"></span><%
               indice=indice+1
               end
            %>
            </dd>
        <%
           end
           @servic=@service.service_types.all
           if @servic.length!=0
        %>
            <dt>Tipo</dt>
            <dd>
              <%
                 @servic.each do |tipo|
                   @servi=Type.where("id=?",tipo.type_id)
              %>
                  <%= @servi.first.name %><br/>
              <%
                 end
              %>
            </dd>
        <%

           end
           if servi.description != nil
        %>
            <dt>Descrição</dt>
            <dd style="text-overflow: ellipsis;width: 150px;"><%= servi.description%></dd>
        <%
           end
           if servi.schedule != nil
        %>
            <dt>Horário</dt>
            <dd style="text-overflow: ellipsis;width: 150px;"><%= servi.schedule%></dd>
        <%
           end
           if servi.transport != nil
        %>
            <dt>Transporte</dt>
            <dd style="text-overflow: ellipsis;width: 150px;"><%= servi.transport%></dd>
        <%
           end
           if @service.site != nil
        %>
            <dt>Site</dt>
            <dd><%= @service.site %></dd>
        <%
           end
           if @service.email != nil
        %>
            <dt>Email</dt>
            <dd><%= @service.email %></dd>
        <%
           end
           if @service.address != nil
        %>
            <dt>Morada</dt>
            <dd><%= @service.address %></dd>
        <%
           end
           if @service.reference_point == true
        %>
            <dt>Ponto de Referência</dt>
            <dd>
              <i class="fa fa-check"></i>
            </dd>
        <%
           end
           if @service.capacity != nil
        %>
            <dt>Capacidade</dt>
            <dd><%= @service.capacity %></dd>
        <%
           end
           if @service.details != nil
        %>
            <dt>Detalhes</dt>
            <dd><%= @service.details %></dd>
        <%
           end
        %>
      </dl>
      <span style="border-top: none;"><%= link_to 'Voltar', services_path ,:class=>"btn btn-default btn-square"%></span>
    </div>
    <div class="col-sm-6">
      <ul class="thumbnails"></ul>
      <%= form_for @photo_service=PhotoService.new, :url => photo_services_path, html: { multipart: true } do |f| %>
          <% if @photo_service.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@photo_service.errors.count, "error") %> Prohibited this upload from being saved:</h2>

                <ul>
                  <% @photo_service.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>
          <div class="actions">
            <%= f.label :photo %>
            <br/>
            <%= f.file_field :photo, multiple: true, name: 'photo_service[photo]', :class=>"filestyle" %>
            <%= f.hidden_field :service_id,  :value => @service.id %>
          </div>
          <script>
              $(":file").filestyle({input: false,classButton: "btn btn-primary",buttonText: "Adicione uma Foto"});
          </script>
      <% end %>
      <% # jquery upload template # %>
      <script id="template-upload" type="text/x-tmpl">
            <div class="upload">
            {%=o.name%}
                <div class="progress">
                    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 0%">
                     <span class="sr-only"></span>
                    </div>
                </div>
            </div>
        </script>
      <br/>
      <br/>
      <div id="map-canvas" style="width: 100%; height: 400px"></div>
    </div>
  </div>
  <hr>
  <%
     @coments=CommentService.where("service_id=?",@service.id).all
     if @coments != nil
  %>
      <div class="row">
        <h3>Comentários</h3>
        <%
           @coments.each do |co|%>
            <div class="media-body bubble-body bubble-arrow-left">
              <div class="bubble-inner">
                <%
                   if co.mobile_user_id != nil
                     usermovel=User.where("id=?",co.mobile_user_id).first
                     nome=usermovel.username
                   else
                     nome="Anonimo"
                   end
                %>
                <h4 class="media-heading bubble-heading"><%= nome %></h4>
                <div class="bubble-content">
                  <p><%= co.comment %></p><p>
                </p></div>
              </div>
            </div>
        <%
           end
        %>
      </div>
  <%
     end
  %>
</div>

