  <![endif]-->
</head>

<body>
<!-- NAV Bar-->
<header class="navbar navbar-inverse navbar-fixed-top bf-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bf-navbar-collapse">
        <span class="icon-bar"></span>
      </button>
      <a href="index.html" class="navbar-brand"><%= image_tag "Index/logo_CR.png", :style=>"width: 20px;height: 20px;" %> CityRoots</a>
    </div>
    <nav class="collapse navbar-collapse bf-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home" , welcome_index_path  %></li>
        <li><%= link_to "Web" , web_index_path %></li>
        <li><%= link_to "Mobile", mobile_index_path  %></li>
        <li><%= link_to "Galeria", galeria_path  %></li>
        <li><%= link_to "Contactos", contact_path %></li>
      </ul>
      <%
         if user_signed_in?
      %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Logout" , "#"  %></li>
          </ul>
      <%
         else
      %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
              <ul class="dropdown-menu dropdown-menu-square" style="width:300px;background-color: #636363;border: 1px solid rgba(0, 0, 0, 0.58);box-shadow: 0 6px 12px rgba(0, 0, 0, 0.63);">
                <form accept-charset="UTF-8" action="/users/sign_in" class="new_user" id="new_user" method="post">
                  <input name="authenticity_token" type="hidden" value="FsNCc7Cw+HAGNqsnOLzRC5KfZwJb0duGe/CI0bMPa7w=" />
                  <li><input style="margin-left: 25px;margin-bottom:10px;width: 250px;" class="form-control form-control-square"  autofocus="autofocus" id="user_email" name="user[email]" type="email" placeholder="Email"></li>
                  <li><input style="margin-left: 25px;margin-bottom:10px;width: 250px;" class="form-control form-control-square" id="user_password" name="user[password]" type="password" placeholder="Password"></li>
                  <li><input id="user_remember_me" name="user[remember_me]" type="checkbox" style="margin-left: 25px;"> <label>Lembrar-se de mim</label></li>
                  <li><input style="margin-left: 25px;margin-right: 25px;width: 250px;"name="commit" type="submit" value="Login"  class="btn btn-info btn-block btn-s btn-square"></li>
                </form>
                <li class="divider"></li>
                <li><%= link_to "Ainda não tem conta?",  do %><i class="fa fa-pencil-square-o"></i><% end %></li>
                <li><a href="#"><i class="fa fa-facebook-square fa-fw"></i> <strong>Login by Facebook</strong></a></li>
                <li><a href="#"><i class="fa fa-google-plus-square fa-fw"></i> <strong>Login by Google +</strong></a></li>

              </ul>
            </li>
          </ul>
      <%
         end
      %>
    </nav>
  </div>
</header>
<br/>
<br/>
<div class="row row-offcanvas row-offcanvas-right">
  <div class="col-xs-12 col-sm-12" style="height:100%">
    <%
       if user_signed_in?
    %>
        <div class="col-xs-6 col-sm-1 sidebar-offcanvas" id="sidebar" role="navigation">
          <div class="list-group sidebar">
            <li class="<%= is_active?(attractions_path) %>">
              <%= link_to attractions_path, :class=>"list-group-item" do %>
                  <i class=" fa fa-tower"></i> Pontos
              <% end %>
            </li>
            <li class="<%= is_active?(itineraries_path) %>">
              <%= link_to itineraries_path, :class=>"list-group-item" do %>
                  <i class=" fa fa-globe"></i> Rotas
              <% end %>
            </li>
            <li class="<%= is_active?(events_path) %>">
              <%= link_to events_path, :class=>"list-group-item"  do %>
                  <i class=" fa fa-music"></i>Eventos
              <% end %>
            </li>
            <li class="<%= is_active?(services_path) %>">
              <%= link_to services_path, :class=>"list-group-item"  do %>
                  <i class=" fa fa-home"></i>Serviços
              <%end%>
            </li>
            <li class="<%= is_active?(services_path) %>">
              <%= link_to services_path, :class=>"list-group-item " do %>
                  <i class=" fa fa-bar-chart-o"></i>Estatistica
              <%end%>
            </li>
          </div>
        </div><!--/span-->
    <%
       end
    %>
    <div class="col-xs-12 col-sm-11 col-sm-offset-1" id="body-page">
      <div class="row">
        <div class="center_body">
          <%= yield %>
        </div>
      </div>
    </div><!--/span-->


  </div><!--/row-->

</div><!--/.container-->
