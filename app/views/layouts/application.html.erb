<body>
<!-- NAV Bar-->
<header class="navbar navbar-inverse navbar-fixed-top bf-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bf-navbar-collapse">
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">
        <%= image_tag "Index/logo_CR.png", :style=>"width: 20px;height: 20px;" %>
        <%= link_to "CityRoots" , welcome_index_path , :style => "color:inherit;text-decoration:none;cursor:pointer;" %>
      </span>
    </div>
    <nav class="collapse navbar-collapse bf-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home" , welcome_index_path  %></li>
        <li><%= link_to "Web" , web_index_path %></li>
        <li><%= link_to "Mobile", mobile_index_path  %></li>
        <li><%= link_to "Galeria", galeria_path  %></li>
        <li><%= link_to "Contactos", contact_path %></li>
      </ul>
      <%
         if user_signed_in?
      %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <%
                 if current_user.username != nil
              %><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.username %>  <b class="caret"></b></a><%
               else
            %><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.email %>  <b class="caret"></b></a><%
               end%>
              <ul class="dropdown-menu dropdown-menu-square" style="width:200px;background-color: #AFAFAF;border: 1px solid rgba(0, 0, 0, 0.58);box-shadow: 0 6px 12px rgba(0, 0, 0, 0.63);">
                <li><a href="/users/sign_up" style="color: #FFFFFF;"><i class="fa fa-cogs" style="margin-left: 8px;"></i> Perfil</a></li>
                <li class="divider"></li>
                <li>
                  <%= link_to destroy_install_session_path(:authenticity_token => form_authenticity_token()) , :method => :delete, :style=>"color: #FFFFFF;" do%>
                      <i class="fa fa-times-circle" style="margin-left: 8px;"></i> Logout
                  <%end%>
                </li>
              </ul>
            </li>
          </ul>
      <%
         else
      %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
              <ul class="dropdown-menu dropdown-menu-square" style="width:300px;background-color: #AFAFAF;border: 1px solid rgba(0, 0, 0, 0.58);box-shadow: 0 6px 12px rgba(0, 0, 0, 0.63);">
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                    <li><%= f.email_field :email, :autofocus => true, :style=>"margin-left: 25px;margin-bottom:10px;width: 250px;", :class=>"form-control form-control-square", :placeholder=>"Email" %></li>
                    <li><%= f.password_field :password , :style=>"margin-left: 25px;margin-bottom:10px;width: 250px;", :class=>"form-control form-control-square", :placeholder=>"Password" %></li>
                    <% if devise_mapping.rememberable? -%>
                        <li><%= f.check_box :remember_me , :style=>"margin-left: 25px;" %> <%= f.label :remember_me %></li>
                    <% end -%>
                    <li><%= f.submit "Login" , :style=>"margin-left: 25px;margin-right: 25px;width: 250px;", :class=>"btn btn-s btn-info btn-square" %></li>
                <% end %>
                <li class="divider"></li>
                <li><a href="/users/sign_up" style="color: #FFFFFF;"><i class="fa fa-pencil-square-o" style="margin-left: 8px;"></i> Registar</a></li>
                <li><a href="#" style="color: #3b5998;"><i class="fa fa-facebook-square fa-fw" style="margin-left: 5px;"></i> Login by Facebook</a></li>
                <li><a href="#" style="color: #d34836;"><i class="fa fa-google-plus-square fa-fw" style="margin-left: 5px;"></i> Login by Google +</a></li>

              </ul>
            </li>
          </ul>
      <%
         end
      %>
    </nav>
  </div>
</header>
<br/>
<br/>
<br/>
<div class="row">
  <%
     if user_signed_in?
  %>
      <div class="col-md-2">
        <ul class="nav nav-pills-square nav-stacked">
          <li style="background: #428bca;.nav>li.active>a>hover>backgound:#FFFFFF" class="active"><%= link_to "#",:style=>"color: #FFFFFF;" do
          %><i class="fa fa-user"></i> Perfil<%
          end%></li>
          <li style="background: #428bca;"><%= link_to attractions_path,:style=>"color: #FFFFFF;" do
          %><i class="fa fa-map-marker"></i> Pontos de interesse<%
             end%></li>
          <li style="background: #428bca;"><%= link_to events_path,:style=>"color: #FFFFFF;" do
          %><i class="fa fa-group"></i> Eventos<%
             end%></li>
          <li style="background: #428bca;"><%= link_to services_path,:style=>"color: #FFFFFF;" do
          %><i class="fa fa-cutlery"></i> Serviços<%
             end%></li>
          <li style="background: #428bca;"><%= link_to "#",:style=>"color: #FFFFFF;" do
          %><i class="fa fa-bar-chart-o"></i> Estatisticas<%
             end%></li>
        </ul>
      </div>
      <div class="col-md-9" id="body-page">
        <div class="row">
          <div class="center_body">
            <%= yield %>
          </div>
        </div>
      </div>
  <%
     else
  %>
      <div class="col-md-1">
      </div>
      <div class="col-md-10" id="body-page">
          <div class="center_body">
            <%= yield %>
          </div>
      </div>
      <div class="col-md-1">
      </div>
  <%
     end
  %>

</div><!--/row-->
