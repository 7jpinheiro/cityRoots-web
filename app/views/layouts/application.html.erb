        <body>

          <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
            <div class="">
              <div class="navbar-header col-sm-2">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><%= image_tag "Index/logo_CR.png" , :style =>"height:30px;width:30px;"%> CityRoots</a><!--<i class=" glyphicon glyphicon-globe"></i>C--->
              </div>
              <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                  <li class="<%= is_active?(welcome_index_path) %>">
                      <%= link_to "Home", welcome_index_path %>
                  </li>
                  <li class="<%= is_active?(pacotes_path) %>">
                      <%= link_to "Pacotes", pacotes_path %>
                  </li>
                  <li class="<%= is_active?(galeria_path) %>">
                      <%= link_to "Galeria", galeria_path %>
                  </li>
                  <li class="<%= is_active?(contact_path) %>">
                      <%= link_to "Contactos", contact_path %>
                  </li>
                  <li><a href="#about">Parceiros</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <% if user_signed_in?
                        if current_user.username != nil
                  %><li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <%= current_user.username %>  <b class="caret"></b></a><%
                        else
                          %><li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i> <%= current_user.email %>  <b class="caret"></b></a><%
                        end
                  %>
                      <ul class="dropdown-menu">
                       
                        <li><a href="#"><i class="glyphicon glyphicon-user"></i> Perfil</a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-cog"></i> Preferências</a></li>
                        <li class="divider"></li>
                        <%= link_to destroy_user_session_path(:authenticity_token => form_authenticity_token()) , :method => :delete do%>
                          <i class=" glyphicon glyphicon-off"></i> Logout
                        <% end %>
                      </ul>
                    </li>
                  <% else %>
                    <li><%= link_to "Login", user_session_path, :class=>"first"  %></li>
                    <li><%= link_to "Registo", new_user_registration_path %></li>
                  <% end %>
                </ul>
              </div>
            </div><!-- /.container -->
          </div><!-- /.navbar -->

          
      </div>

      <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-xs-12 col-sm-12" style="height:100%">
              <div class="col-xs-6 col-sm-1 sidebar-offcanvas" id="sidebar" role="navigation">
                <div class="list-group sidebar">
                    <li class="<%= is_active?(attractions_path) %>">
                      <%= link_to attractions_path, :class=>"list-group-item" do %>
                          <i class=" glyphicon glyphicon-tower"></i> Pontos
                      <% end %>
                    </li>
                    <li class="<%= is_active?(itineraries_path) %>">
                      <%= link_to itineraries_path, :class=>"list-group-item" do %>
                          <i class=" glyphicon glyphicon-globe"></i> Rotas
                      <% end %>
                    </li>
                    <li class="<%= is_active?(events_path) %>">
                      <%= link_to events_path, :class=>"list-group-item"  do %>
                        <i class=" glyphicon glyphicon-music"></i>Eventos
                      <% end %>
                    </li>
                    <li class="<%= is_active?(services_path) %>">
                      <%= link_to services_path, :class=>"list-group-item"  do %>
                        <i class=" glyphicon glyphicon-home"></i>Serviços
                      <%end%>
                    </li>
                    <li class="<%= is_active?(services_path) %>">
                      <%= link_to services_path, :class=>"list-group-item " do %>
                        <i class=" glyphicon glyphicon-signal"></i>Estatistica
                      <%end%>
                    </li>
                </div>
              </div><!--/span-->
              <div class="col-xs-12 col-sm-11" id="body-page">
                <div class="row">
                <div class="center_body">
                  <%= csrf_meta_tag %>
                  <%= yield %>
                </div>
                </div> 
              </div><!--/span-->


            </div><!--/row-->

          </div><!--/.container-->
