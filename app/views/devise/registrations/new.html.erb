<%= javascript_include_tag "jqBootstrapValidation" %>
<style>
body{
  background: #f8f8f8
}
</style>
</br>
</br>

<div class="col-sm-6 col-sm-offset-3" style="background:#fff;  margin-bottom:40px">
  <div class=" row">
    <div class="col-sm-10 col-sm-offset-1">
    <div class="text-center">
        <h1>Registo</h1>
    </div>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:novalidate => 'novalidate', :class=>"form"}) do |f| %>
        <%= devise_error_messages! %>
        <br>
        <div class="row">
          <div class="form-group control-group">
            <label for="username" class="control-label">Nome de utilizador</label>
              <%= f.text_field :username, :autofocus => true , :class=>"form-control form-control-square", :required => true %>
              <p class="help-block"></p>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="email" class="control-label">Email</label>
              <%= f.text_field :email, :required => true , :type => "email", :class=>"form-control form-control-square" %>
                <p class="help-block"></p>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="password" class="control-label">Password</label>
              <%= f.password_field :password, :class=>"form-control form-control-square", :required => true, :minlength => 8  %>
              <p class="help-block"></p>
          </div>
        </div>
        <%= f.text_field :type, :value=>"C", :type=>"hidden" %>
        <div class="row">
          <div class="form-group control-group">
            <label for="password_confirmation" class="control-label">Confirmação Password</label>
              <%= f.password_field :password_confirmation, :class=>"form-control form-control-square", :required => true, 'data-validation-matches-match' =>"user[password]", :minlength => 8 %>
              <p class="help-block"></p>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="language_id" class="control-label">Idioma</label>
              <%= f.collection_select(:language_id, Language.all, :id, :name,{prompt: "Selecione um Idioma"}, {class: "form-control", :required => true} ) %>
              <p class="help-block"></p>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="password_confirmation" class="control-label">País</label>
              <%= f.collection_select(:country_id, Country.all, :id, :name,{prompt: "Selecione um País"}, {class: "form-control", :required => true} ) %>
              <p class="help-block"></p>
          </div>
        </div>
      </br>
        <div><%= f.submit "Registar" , :class=>"btn btn-primary btn-block btn-square" %></div>
    <% end %>
      </br>
        <%= link_to "Login", new_session_path(resource_name) %><br />
      </br>
    </div>
  </div>
</div>


<script>
  $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); } );
</script>
