<br/>
<div class="row">
  <table class="col-sm-6">
    <tr>
      <td class="col-sm-1">
        <%= image_tag "user.png" , :style =>"height:15%;width: 60%" %>
      </td>
      <td class="col-sm-2">
        <h1><%= @user.username%></h1>
      </td>
    </tr>
  </table>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="well well-sm">
      <p style="text-align: center;">
        <strong style="text-align: center;"> Informações</strong>
      <p/>

      <dl class="dl-horizontal" style="align-content: center;">
        <dt>Nome de utilizador</dt>
        <dd><%= @user.username%></dd>
        <dt>Email</dt>
        <dd><%= @user.email%></dd>
        <dt>Idioma</dt>
        <dd><%= @user.language.name%></dd>
        <dt>País</dt>
        <dd><%= @user.country.name%></dd>
      </dl>
      
    </div>
  </div>
  <div class="col-md-6">
    <div class="well well-sm" style="height: 176px;">
      <strong>Dados do utilizador</strong>
      <%
         if @user.web_user.nil?
      %>
          <p class="text text-warning">Não completou o registo</p>
      <%
         else
           n_evets=Event.find_all_by_web_user_id(@user.id).length
           n_attra=Attraction.find_all_by_web_user_id(@user.id).length
           n_rotas=Itinerary.find_all_by_user_id(@user.id).length
           n_servicos=Service.find_all_by_web_user_id(@user.id).length
           web=WebUser.where("id=?",@user.id).first
           type=web.web_user_type
      %>
          <table>
            <tr>
              <%
                 if @user.role? (:admin)
                    n_events=Event.all.length
                    n_attra=Attraction.all.length
                    n_rotas=Itinerary.all.length
                    n_servicos=Service.all.length
                    n_users=User.all.length
                    %>
                    <td>
                    Pontos de interrese
                        </td>
                        <td><span class="badge badge-danger badge-square"><%= n_attra%></span>
                    </td>
                    </tr>
                    <tr>
                      <td>
                        Eventos
                            </td>
                            <td><span class="badge badge-danger badge-square"><%= n_events%></span>
                        </td>
                        </tr>
                    <tr>
                      <td>
                        Rotas
                            </td>
                            <td><span class="badge badge-danger badge-square"><%= n_rotas%></span>
                        </td>
                        </tr>
                    <tr>
                      <td>
                        Serviços
                            </td>
                            <td><span class="badge badge-danger badge-square"><%= n_servicos%></span>
                        </td>
                        </tr>
                      <tr>
                      <tr>
                      <td>
                        Users
                            </td>
                            <td><span class="badge badge-danger badge-square"><%= n_users%></span>
                        </td>
                        </tr>
                      <tr>
                  <%
                 end
                 if @user.role? (:entidade)
              %>
                      <td>
                        Pontos de interrese
                            </td>
                            <td><span class="badge badge-danger badge-square"><%= n_attra%></span>
                        </td>
                        </tr>
                        <tr>
                  
                      <td>
                        Eventos<span class="badge badge-danger badge-square"><%= n_evets%></span>
                      </td>
                      </tr>
                      <tr>                
                      <td>
                       Rotas<span class="badge badge-danger badge-square"><%= n_rotas%></span>
                      </td>
                  <%
                     
                     end
                     if @user.role? (:restauracao_gold)
                  %>
                      <td>
                        Eventos<span class="badge badge-danger badge-square"><%= n_evets%></span>
                      </td>
                      </tr>
                      <tr>
                      <td>
                        Estabelecimentos <span class="badge badge-danger badge-square"><%= n_servicos%></span>
                      </td>
                  <%
                     end
                     if @user.role? (:restauracao)
                   
                  %>
                      <td>
                        Estabelecimentos <span class="badge badge-danger badge-square"><%= n_servicos%></span>
                      </td>
               
                  <%
                     
                     end
                  %>
              </tr>
              </table>
      <%  end
      %>
    </div>
  </div>
</div>
<% if @user.role? (:restauracao) %>
<div class="row">
  <div class="col-md-12">
    <div class="well well-sm">
      <p>
        <h3><strong>Os seus planos</strong></h3>
      <p class="text-muted">
        Obtenha o plano perfeito para o seu negócio.
      </p>
      </p>
      <table class="table table-bordered">
        <tr>
          <th class="col-md-4">Tipo</th>
          <th class="col-md-4">Data compra</th>
          <th class="col-md-4">Data de Expiração</th>
        </tr>
        <tr>
          <td class="col-md-4">Básico</th>
          <td class="col-md-4"><%= @user.current_sign_in_at %></th>
