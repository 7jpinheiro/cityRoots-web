<%= javascript_include_tag "jqBootstrapValidation" %>
<div class="page-header">
    <h1>Bem vindo ao CityRoots</h1>
</div>

<div class="container">
  <div class="jumbotron">
    <%= form_for(resource, :as => resource_name, :url =>   users_edit_path(resource_name), :html => {:novalidate => 'novalidate', :class=>"form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
        <br>
        <div class="row">
          <div class="form-group control-group">
            <label for="username" class="col-sm-4 control-label">Nome de utilizador</label>
            <div class="col-sm-8">
              <%= f.text_field :username, :autofocus => true , :class=>"form-control form-control-square", :required => true %>
              <p class="help-block"></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="email" class="col-sm-4 control-label">Email</label>
            <div class="col-sm-8">
              <%= f.text_field :email, :required => true , :autofocus => true , :type => "email", :class=>"form-control form-control-square" %>
                <p class="help-block"></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="password" class="col-sm-4 control-label">Password</label>
            <div class="col-sm-8">
              <%= f.password_field :password, :autofocus => true , :class=>"form-control form-control-square", :required => true, :minlength => 8  %>
              <p class="help-block"></p>
            </div>
          </div>
        </div>
        <%= f.text_field :type, :value=>"C", :type=>"hidden" %>
        <div class="row">
          <div class="form-group control-group">
            <label for="password_confirmation" class="col-sm-4 control-label">Confirmação Password</label>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, :autofocus => true , :class=>"form-control form-control-square", :required => true, 'data-validation-matches-match' =>"user[password]", :minlength => 8 %>
              <p class="help-block"></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="language_id" class="col-sm-4 control-label">Idioma</label>
            <div class="col-sm-8">
              <%= f.collection_select(:language_id, Language.all, :id, :name,{prompt: "Selecione um Idioma"}, {class: "form-control", :required => true} ) %>
              <p class="help-block"></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="form-group control-group">
            <label for="password_confirmation" class="col-sm-4 control-label">País</label>
            <div class="col-sm-8">
              <%= f.collection_select(:country_id, Country.all, :id, :name,{prompt: "Selecione um País"}, {class: "form-control", :required => true} ) %>
              <p class="help-block"></p>
            </div>
          </div>
        </div>
      </br>
        <div><%= f.submit "Registar" , :class=>"btn btn-primary btn-block btn-square" , :style=>"width:100px;" %></div>
    <% end %>

  </div>
</div>




<script>
  $(function () { $("input,select,textarea").not("[type=submit]").jqBootstrapValidation(); } );
</script>