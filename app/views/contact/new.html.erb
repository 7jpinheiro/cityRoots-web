<div class="col-sm-6 ">
<%= form_for @message, :url => contact_create_path, :html => {:class => "form"} do |form| %>
  <legend>Contacte-nos</legend>
  <span class="help-block">Envie-nos as suas d√∫vidas preenchendo os campos que se seguem:
</span>
      <div class="form-group">
        <%= form.label 'Nome' %>
        <%= form.text_field :name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email , class: "form-control"%>
      </div>
      <div class="form-group">
        <%= form.label 'Assunto' %>
        <%= form.text_field :subject, class: "form-control" %>
      </div>
     <div class="form-group">
        <%= form.label 'Mensagem' %>
        <%= form.text_area :body, class: "form-control", rows: "6" %>
    </div>
    <fieldset class="actions">
      <%= form.submit "Enviar",  :class => "btn btn-primary"  %>
    </fieldset>
<% end %>
</div>
