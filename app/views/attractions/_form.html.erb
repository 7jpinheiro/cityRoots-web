              <%= e.label "Nome" ,:for=>"name" , :class=>"control-label col-sm-3" %>
              <div class="col-sm-7">
                <%= e.text_field :name ,:id=>"name" , :class=>"form-control form-control-square", :placeholder=>"Bom Jesus", :required => true%>
