					</div>
				</div>
				
				<div class="row">
					<div class="form-group col-sm-9">
						<%= f.label :site, class: "control-label" %>
						<%= f.text_field :site, class: "form-control" %>
					</div>
				</div>
				<div class="row">
					<div class="form-group col-sm-9">
						<%= f.label :email, class: "control-label" %>
						<%= f.text_field :email, class: "form-control" %>
					</div>
				</div>
				<div class="row">
					<div class="form-group col-sm-9">
						<%= f.label 'Horário', class: "control-label" %>
						<%= f.text_area :schedule, class: "form-control", rows: "2" %>
					</div>
				</div>
				<div class="row">
					<div class="form-group col-sm-9">
						<%= f.label :address, class: "control-label" %>
						<%= f.text_area :address, class: "form-control", rows: "3" %>
					</div>
				</div>
				<div class="row">
					<div class="form-group col-sm-6">
						<%= f.label :latitude, class: "col-sm-1 control-label" %>
						<%= f.text_field :latitude, class: "form-control" %>
					</div>
					<div class="form-group  col-sm-6">
							<%= f.label :longitude, class: "col-sm-1 control-label" %>
							<%= f.text_field :longitude, class: "form-control" %>
					</div>
				</div>
				
				<div class="row">
					<div class="form-group col-sm-12">
						<%= f.label :description, class: "control-label" %>
						<%= f.text_area :description, class: "form-control", rows: "4" %>
					</div>
				</div>
			</div>
			<div class="col-md-6 ">
				<%= image_tag  @attraction.photo_attractions.first.url, :style =>"style=height: 300px; max-width: 500px; display: block;" %>
          <div class="row" >
          <a href="#basico" class="btn btn-primary col-sm-8 col-sm-offset-2" role="button" style="margin-top: 10px;">Adicionar Foto</a>
          </div>
          <div class="row">
						<div class="form-group col-sm-12 ">
							<div class="checkbox">
								<label> <%= f.check_box :active %> Ponto de Interesse Activo </label>
							</div>
						</div>
					</div>
					<div class="row" style="margin-top: 60px;">
					 		<iframe width="550px" height="250px"  frameborder="0" scrolling="no"  src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=new+york+city&amp;aq=&amp;sll=37.6,-95.665&amp;sspn=60.867771,135.263672&amp;t=m&amp;ie=UTF8&amp;hq=&amp;hnear=New+York&amp;z=11&amp;iwloc=A&amp;output=embed" style="margin-left: 15px;"></iframe>
					 		</div>
					</div>
       </div>
       <div class="actions" >
			<%= f.submit 'Submeter', :class => "btn btn-primary " %>
		</div>
		</div>


